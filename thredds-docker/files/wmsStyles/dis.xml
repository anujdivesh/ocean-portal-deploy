<?xml version="1.0" encoding="ISO-8859-1"?>
<StyledLayerDescriptor version="1.1.0" xsi:schemaLocation="http://www.opengis.net/sld
StyledLayerDescriptor.xsd" xmlns="http://www.opengis.net/sld" xmlns:ogc="http://www.opengis.net/ogc"
xmlns:se="http://www.opengis.net/se" xmlns:xlink="http://www.w3.org/1999/xlink"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:resc="http://www.resc.reading.ac.uk">

  <NamedLayer>
    <se:Name>$layerName</se:Name>
    <UserStyle>
      <se:CoverageStyle>
        <se:Rule>
          <se:RasterSymbolizer>
            <se:Opacity>$opacity</se:Opacity>
            <se:ColorMap>
              <se:ColorMapEntry color="#ff0000" quantity="0" opacity="1" />
              <se:ColorMapEntry color="#ffff00" quantity="1" opacity="1" />
              <se:ColorMapEntry color="#0000ff" quantity="2" opacity="1" />
              <se:ColorMapEntry color="#008000" quantity="3" opacity="1" />
              <se:ColorMapEntry color="#ffffff" quantity="4" opacity="1" />
              <se:ColorMapEntry color="#f44336" quantity="5" opacity="1" />
              <se:ColorMapEntry color="#9c27b0" quantity="6" opacity="1" />
              <se:ColorMapEntry color="#2196f3" quantity="7" opacity="1" />
              <se:ColorMapEntry color="#4caf50" quantity="8" opacity="1" />
              <se:ColorMapEntry color="#ffeb3b" quantity="9" opacity="1" />
            </se:ColorMap>
          </se:RasterSymbolizer>
        </se:Rule>
      </se:CoverageStyle>
    </UserStyle>
  </NamedLayer>

</StyledLayerDescriptor>
